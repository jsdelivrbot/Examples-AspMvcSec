@model IEnumerable<AspMvcSec.Models.Comment>
@{
  ViewBag.Title = "Home Page";
}

<h1>Latest user comments</h1>

<div class="row">
  <table class="table table-bordered">
    @foreach (var item in Model)
    {
      <tr>
        <td>
          <div class="form-group">
            <label class="col-md-1 control-label">Who</label>
            <div class="col-md-11">
              @Html.Label("who", item.Who, new { @class = "form-control"})              
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-1 control-label">Date</label>
            <div class="col-md-11">
              @Html.Label("date", item.Date.ToString(), new {@class = "form-control"})
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-1 control-label">Text</label>
            <div class="col-md-11">
              @Html.Label("text", item.Text, new { @class = "form-control" })              
            </div>
          </div>
        </td>
      </tr>
    }
  </table>
</div>

@Html.Action("CreateComment")

